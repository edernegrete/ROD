grisecito = #F5F5F5
grisezote = #9B9B9B
@import "style.css"
a
	text-decoration none
audio
	margin-top 2em
body
	background grisecito
	font-family 'Roboto', sans-serif
	font-size 16px
	margin 0
	padding 0
.titulo
	color #FAFAFA
	font-family 'Limelight', cursive
	font-size 13em
	margin 0
	position relative
	text-align left
	text-shadow 1px 1px 10px #151515
.header
	background url('imagen.jpg')
	background-position center
	.menu
		background grisezote
		opacity .8
		position absolute
		transition .2s all ease-in
		right 0
		ul
			list-style none
			margin 0
			padding 0
			li
				color grisecito
				font-size 1.2em
				margin 1em
	.menu:hover
		opacity 1
.cancion_nombre
	display block
.canciones
	text-align center
	margin-top 3em
footer
	text-align center
	margin-top 3em
	.twit
		margin-left .2em
		&:before
		&:after
			content '-'
	
		a
			color #DD4F24
@media screen and (max-width: 400px)
	.container
		margin-top 3em
	.titulo
		text-align center
		font-size 190em
	span
		margin-top 1em
@media screen and (max-width: 758px)
	.titulo
		text-align center
		font-size 10em
	.canciones
		margin-top 1.5em
	.menu
		ul
			li
				display inline-block